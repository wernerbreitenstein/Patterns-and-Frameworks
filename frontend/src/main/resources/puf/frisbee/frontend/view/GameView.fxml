<AnchorPane onKeyPressed="#handleKeyPressed" onKeyReleased="#handleKeyReleased" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="puf.frisbee.frontend.view.GameView">
   <children>
      <ImageView fx:id="level03BackgroundImage" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/level03_bg.png" />
         </image>
      </ImageView>
      <ImageView fx:id="level02BackgroundImage" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/level02_bg.png" />
         </image>
      </ImageView>
      <ImageView fx:id="level01BackgroundImage" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/level01_bg.png" />
         </image>
      </ImageView>
      <fx:include fx:id="characterLeft" source="CharacterLeftView.fxml" />
