<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="root" stylesheets="@../css/waiting.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="puf.frisbee.frontend.view.HighscoreView">
   <children>
      <VBox alignment="TOP_CENTER" layoutY="81.0" prefHeight="585.0" prefWidth="1280.0" spacing="20.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="81.0">
         <children>
            <Label alignment="CENTER" text="FRISBEE" textAlignment="CENTER" textFill="#755656">
               <font>
                  <Font name="System Bold" size="42.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="6.0" />
               </VBox.margin>
            </Label>
            <Button mnemonicParsing="false" onMouseClicked="#handleStartButtonClicked" stylesheets="@../css/main.css" text="Neues Spiel starten" />
            <TableView fx:id="highscoreTable" editable="true" prefHeight="318.0" prefWidth="880.0" styleClass="highscore-table" stylesheets="@../css/highscore.css">
              <columns>
                <TableColumn prefWidth="564.8964691162109" text="Team">
                    <cellValueFactory>
                        <PropertyValueFactory property="teamName" />
                    </cellValueFactory>
                </TableColumn>
                  <TableColumn minWidth="0.0" prefWidth="144.603515625" text="Level">
                      <cellValueFactory>
                          <PropertyValueFactory property="teamLevel" />
                      </cellValueFactory>
                  </TableColumn>
                <TableColumn fx:id="highscoreScore" prefWidth="170.07550048828125" text="Score">
                    <cellValueFactory>
                        <PropertyValueFactory property="teamScore" />
                    </cellValueFactory>
                </TableColumn>
              </columns>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <effect>
                  <Blend />
               </effect>
            </TableView>
            <Button mnemonicParsing="false" onMouseClicked="#handleRefreshButtonClicked" stylesheets="@../css/main.css" text="Refresh" />
            <Button mnemonicParsing="false" onAction="#handleButtonQuitGameClicked" stylesheets="@../css/main.css" text="Quit Game" />
         </children>
      </VBox>
   </children>
</AnchorPane>
